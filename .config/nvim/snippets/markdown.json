{
  "code": {
    "prefix": ["code"],
    "body": [
      "```${1:lang}",
      "${0}",
      "```"
    ],
    "description": "Insert code block."
  },
  "italic": {
    "prefix": ["italic"],
    "body": [
      "*${1:text}* ${0}"
    ],
    "description": "Italic wrap"
  },
  "bold": {
    "prefix": ["bold"],
    "body": [
      "**${1:text}** ${0}"
    ],
    "description": "Bold wrap"
  },
  "combine": {
    "prefix": ["combine"],
    "body": [
      "***${1:text}*** ${0}"
    ],
    "description": "Italic and Bold wrap"
  },
  "title": {
    "prefix": ["title"],
    "body": [
      "---",
      "title: ${1:title}",
      "author: Daffa Haryadi (Takary15)",
      "date: ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE}",
      "---"
    ],
    "description": "Standard YAML-format header."
  },
  "blog": {
    "prefix": ["blog"],
    "body": [
      "+++",
      "title = ${1:blog}",
      "description = ", 
      "tags = []",
      "date = ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE}",
      "categories = []",
      "image = ",
      "+++"
    ],
    "description": "Standart Hugo Header"
  }
}
